  <h1><%= @book.title %></h1>
  <h2><%= @book.author %></h2>
  <h2><%= @book.genres.map { |genre| genre.name }.join(', ') %></h2>

  <h3>Recommend this book:</h3>
  <% @activities.each do |activity| %>
    <%= activity.name %>
    <button><%= link_to 'Recommend', upvote_path(id: activity.id, book_id: @book.id) %></button><%= activity.get_upvotes.count %>
    <button><%= link_to 'Not recommended', downvote_path(id: activity.id, book_id: @book.id) %></button><%= activity.get_downvotes.count %>
    <br>
  <% end %>