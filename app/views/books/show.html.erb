<h1><%= @book.title %></h1>
<div><%= image_tag(@book.thumbnail) %></div>
<h4><%= @book.author %></h4>
<p>(<%= @book.genres.map { |genre| genre.name }.join(', ') %>)</p>
<p><%= @book.description %></p>

<h3>Recommend this book:</h3>
<% @recommendations.each do |recommendation| %>
  <div class="buttons">    
    <%= recommendation.activity.name %>
    <button><%= link_to 'Recommend', upvote_path(activity_id: recommendation.activity.id, book_id: @book.id) %></button><%= recommendation.get_upvotes.count %>
    <button><%= link_to 'Not recommended', downvote_path(activity_id: recommendation.activity.id, book_id: @book.id) %></button><%= recommendation.get_downvotes.count %>
  </div>
<% end %>